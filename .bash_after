# Master bash file which is sourced by .bashrc. Contains all bash files to source

source /home/svora/dotfiles/.bash_env
source /home/svora/dotfiles/.bash_prompt
source /home/svora/dotfiles/.bash_functions
source /home/svora/dotfiles/.bash_aliases
source /home/svora/dotfiles/.bash_central

# To enable tmux to start up when an xterm is launched with tmux_flag=true passed to it (as in my .fvwm_after)
if [[ -n $tmux_flag ]]; then
	if [[ $tmux_flag = attach ]]; then
		do_tmux=attach
	else
		do_tmux=launch
	fi
	tmux_flag=  # Unset this flag so subsequent shells don't try and launch nested tmux sessions
	tmux ls 2> /dev/null
	if [ $? = 1 ]; then
		tmux
	elif [[ $do_tmux = attach ]]; then
		tmux attach # Launch tmux
	elif [[ $do_tmux = launch ]]; then
		tmux
	fi
fi
