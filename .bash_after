# Master bash file which is sourced by .bashrc. Contains all bash files to source

source /home/svora/dotfiles/.bash/.bash_env
source /home/svora/dotfiles/.bash/.bash_prompt
source /home/svora/dotfiles/.bash/.bash_functions
source /home/svora/dotfiles/.bash/.bash_aliases
source /home/svora/dotfiles/.bash/.bash_central

# To enable tmux to start up when an xterm is launched with tmux_flag=true passed to it (as in my .fvwm_after)
if [[ -n $tmux_flag ]]; then
	if [[ $tmux_flag = attach ]]; then
		tmux_flag=  # Unset this flag so subsequent shells don't try and launch nested tmux sessions
		tmux new-session -A -s main # Join tmux session if main exists, else create
	else
		tmux_flag=  # Unset this flag so subsequent shells don't try and launch nested tmux sessions
		tmux
	fi
fi
